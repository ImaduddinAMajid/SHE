<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pengajuan_ijin_kerja1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wika.she.activity.PengajuanIjinKerja1"
    android:background="@color/head_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- JUDUL -->
        <TextView
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_form_peng_ijker"
                android:textStyle="bold"
                android:textSize="@dimen/form_text_judul"
                android:textColor="@color/menu_text_color"/>

        <!-- DIAJUKAN OLEH -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_diajukan_oleh"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/text_colon"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <EditText
                    android:id="@+id/edit_text_diajukan_oleh"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_diajukan_oleh"
                    android:textColor="@color/menu_text_color"
                    android:background="@drawable/input_border"/>
        </LinearLayout>

        <!-- LOKASI KERJA -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_lokasi_kerja"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/text_colon"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <EditText
                    android:id="@+id/edit_text_lokasi_kerja"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_lokasi_kerja"
                    android:textColor="@color/menu_text_color"
                    android:background="@drawable/input_border"/>
        </LinearLayout>

        <!-- LINGKUP KERJA -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_lingkup_kerja"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/text_colon"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <EditText
                    android:id="@+id/edit_text_lingkup_kerja"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_lingkup_kerja"
                    android:textColor="@color/menu_text_color"
                    android:background="@drawable/input_border"/>
        </LinearLayout>

        <!-- JAM KERJA -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                    android:layout_weight="2.7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_jam_kerja"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/text_colon"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <EditText
                    android:id="@+id/edit_text_jam_kerja_mulai"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_jam_kerja_hint"
                    android:textColor="@color/menu_text_color"
                    android:textSize="16sp"
                    android:background="@drawable/input_border"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_horizontal_margin"
                    android:layout_marginEnd="@dimen/text_horizontal_margin"
                    android:text="s/d"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <EditText
                    android:id="@+id/edit_text_jam_kerja_akhir"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_jam_kerja_hint"
                    android:textColor="@color/menu_text_color"
                    android:textSize="16sp"
                    android:background="@drawable/input_border"/>
        </LinearLayout>

        <!-- KEBUTUHAN ALAT BERAT -->
        <!-- TODO: Add spinner resources -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_kebutuhan_alat_berat"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/text_colon"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <com.wika.she.util.MultiSpinner
                    android:id="@+id/spinner_kebutuhan_alat_berat"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:prompt="@string/text_kebutuhan_alat_berat"
                    android:entries="@array/user_array"
                    android:textColor="@color/menu_text_color"
                    android:background="@drawable/input_border"/>
        </LinearLayout>

        <!-- PEKERJA YANG TERLIBAT -->
        <!-- TODO: Add spinner resources -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_pekerja"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/text_colon"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <Spinner
                    android:id="@+id/spinner_pekerja"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:prompt="@string/text_pekerja"
                    android:entries="@array/user_array"
                    android:textColor="@color/menu_text_color"
                    android:background="@drawable/input_border"/>
        </LinearLayout>

        <!-- KELENGKAPAN KESELAMATAN -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_kelengkapan_keselamatan"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/text_colon"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/form_text_konten"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                <CheckBox
                        android:id="@+id/checkbox_sarung_tangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_sarung_tangan"
                        android:buttonTint="@color/checkbox"
                        android:textColor="@color/menu_text_color"
                        android:onClick="onCheckboxClicked"/>

                <CheckBox
                        android:id="@+id/checkbox_kacamata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_kacamata"
                        android:buttonTint="@color/checkbox"
                        android:textColor="@color/menu_text_color"
                        android:onClick="onCheckboxClicked"/>

                <CheckBox
                        android:id="@+id/checkbox_masker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_masker"
                        android:buttonTint="@color/checkbox"
                        android:textColor="@color/menu_text_color"
                        android:onClick="onCheckboxClicked"/>

                <CheckBox
                        android:id="@+id/checkbox_body_harness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_body_harness"
                        android:buttonTint="@color/checkbox"
                        android:textColor="@color/menu_text_color"
                        android:onClick="onCheckboxClicked"/>

                <CheckBox
                        android:id="@+id/checkbox_pelindung_badan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_pelindung_badan"
                        android:buttonTint="@color/checkbox"
                        android:textColor="@color/menu_text_color"
                        android:onClick="onCheckboxClicked"/>

                <CheckBox
                        android:id="@+id/checkbox_earplug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_earplug"
                        android:buttonTint="@color/checkbox"
                        android:textColor="@color/menu_text_color"
                        android:onClick="onCheckboxClicked"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Button -->
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="end">

            <Button
                    android:id="@+id/button_cancel"
                    android:onClick="cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/button_cancel"/>

            <Button
                    android:id="@+id/button_next"
                    android:onClick="next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_next"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
