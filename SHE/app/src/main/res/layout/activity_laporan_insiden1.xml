<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_laporan_insiden1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.wika.she.activity.admin.LaporanInsiden"
        android:background="@color/head_bg">

    <!-- JUDUL -->
    <TextView
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_form_laporan_insiden"
            android:textStyle="bold"
            android:textSize="@dimen/form_text_judul"
            android:textColor="@color/menu_text_color"/>

    <!-- NAMA KORBAN -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_nama_korban"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <EditText
                android:id="@+id/edit_text_nama_korban"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_nama_korban"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/input_border"/>

    </LinearLayout>

    <!-- TTL KORBAN -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_ttl_korban"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <EditText
                android:id="@+id/edit_text_ttl_korban"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_ttl_korban"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/input_border"/>
    </LinearLayout>

    <!-- PEKERJAAN -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_pekerjaan"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <EditText
                android:id="@+id/edit_text_perkerjaan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_pekerjaan"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/input_border"/>
    </LinearLayout>

    <!-- TIPE UNIT KERJA-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_unit_kerja"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <EditText
                android:id="@+id/edit_text_unit_kerja"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_unit_kerja"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/input_border"/>
    </LinearLayout>

    <!-- TIPE INSIDEN -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_tipe_insiden"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <CheckBox
                    android:id="@+id/checkbox_kecelakaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox_kecelakaan"
                    android:buttonTint="@color/checkbox"
                    android:textColor="@color/menu_text_color"
                    android:onClick="onCheckboxClicked"/>

            <CheckBox
                    android:id="@+id/checkbox_nearmiss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox_nearmiss"
                    android:buttonTint="@color/checkbox"
                    android:textColor="@color/menu_text_color"
                    android:onClick="onCheckboxClicked"/>
        </LinearLayout>

    </LinearLayout>

    <!-- KRONOLOGI -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_kronologi"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"
                android:layout_gravity="start"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"
                android:layout_gravity="start"/>

        <EditText
                android:id="@+id/edit_text_kronologi"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_kronologi"
                android:textColor="@color/menu_text_color"
                android:inputType="textMultiLine"
                android:lines="5"
                android:gravity="start"
                android:background="@drawable/input_border"/>
    </LinearLayout>

    <!-- BUTTON -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="end">

        <Button
                android:id="@+id/button_cancel"
                android:onClick="cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_cancel"/>

        <Button
                android:id="@+id/button_next"
                android:onClick="next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_next"/>
    </LinearLayout>
</LinearLayout>
