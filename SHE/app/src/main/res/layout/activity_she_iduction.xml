<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_she_iduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.wika.she.activity.admin.SheIduction"
        android:background="@color/head_bg">

    <!-- JUDUL -->
    <TextView
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_form_she_induction"
            android:textStyle="bold"
            android:textSize="@dimen/form_text_judul"
            android:textColor="@color/menu_text_color"/>

    <!-- NAMA PESERTA -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_nama_peserta"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <EditText
                android:id="@+id/edit_text_nama_peserta"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_nama_peserta"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/input_border"/>

    </LinearLayout>

    <!-- TANGGAL -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_tanggal_induction"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <EditText
                android:id="@+id/edit_text_tanggal_induksi"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_tanggal_induction"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/input_border"/>
    </LinearLayout>

    <!-- NO. TELEPON -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_no_telpon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <EditText
                android:id="@+id/edit_text_no_telepon"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_no_telpon"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/input_border"/>
    </LinearLayout>

    <!-- JABATAN -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_jabatan"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <EditText
                android:id="@+id/edit_text_jabatan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_jabatan"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/input_border"/>

    </LinearLayout>

    <!-- UNIT KERJA -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_unit_kerja_induction"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <EditText
                android:id="@+id/edit_text_unit_kerja_induction"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_unit_kerja_induction"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/input_border"/>

    </LinearLayout>

    <!-- NO. KTP -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_no_ktp"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <EditText
                android:id="@+id/edit_text_no_ktp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/text_no_ktp"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/input_border"/>

    </LinearLayout>

    <!-- FOTO PESERTA -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_foto_peserta"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/text_colon"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/form_text_konten"/>

        <ImageButton
                android:id="@+id/button_image_foto_peserta"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="photoClicked"
                android:textColor="@color/menu_text_color"
                android:background="@drawable/camera_frame"/>

    </LinearLayout>

    <!-- BUTTON -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="end">

        <Button
                android:id="@+id/button_cancel"
                android:onClick="cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_cancel"/>

        <Button
                android:id="@+id/button_submit"
                android:onClick="submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_submit"/>
    </LinearLayout>
</LinearLayout>
